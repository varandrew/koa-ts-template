{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "outDir": "./dist",
    "sourceMap": true,
    "removeComments": true,
    "noImplicitAny": false,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": [
      "node_modules/@types",
      "typings"
    ],
    "baseUrl": ".",
    "paths": {
      "@app": ["app"],
      "@core/*": ["app/core/*"],
      "@common": ["app/common"],
      "@utils": ["app/utils"],
      "@services": ["app/services"],
      "@controllers": ["app/controllers"],
      "@entities": ["app/entities"]
    }
  },

  "compileOnSave": false,
  "includes": [
    "app/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
